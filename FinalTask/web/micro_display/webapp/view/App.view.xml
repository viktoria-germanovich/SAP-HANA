<mvc:View controllerName="micro_display.controller.App" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
    <Shell>
        <App id="home">
            <Page title="{i18n>homePageTitle}">
                <Panel class="sapUiResponsiveMargin" width="auto">
                    <content>
                        <Table id="microTable" growing="true" growingThreshold="5" items="{path: 'microwaves>/Microwaves'}"
                            mode="SingleSelectMaster" selectionChange="selectFridge" >
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Text text="Enabled" />
                                        <CheckBox selected="false" select="checkDone" enabled="true" />
                                        <Label text="Brand" class="sapUiSmallMargin" />
                                        <Input placeholder="{i18n>Placeholder}" width="auto" enabled="{configModel>/bool}" value="{microModel>/brand}"/>
                                        <Label text="Color" class="sapUiSmallMargin" />
                                        <Input placeholder="{i18n>Placeholder}" width="auto" enabled="{configModel>/bool}" value="{microModel>/color}"/>
                                        <Button text="{i18n>serviceButton}" width="auto" press="onDialogPress" class="sapUiSmallMarginBottom" />
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column id="idColumn">
                                    <Text text="{i18n>idNameLabelText}" />
                                </Column>
                                <Column id="brandColumn">
                                    <Text text="{i18n>brandLabelText}" />
                                </Column>
                                <Column id="colorColumn">
                                    <Text text="{i18n>colorLabelText}" />
                                </Column>
                                <Column id="serviceColumn">
                                    <Text text="{i18n>serviceLabelText}" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{microwaves>microid}" />
                                    </cells>
                                    <cells>
                                        <Text text="{microwaves>brand}" />
                                    </cells>
                                    <cells>
                                        <Text text="{microwaves>color}" />
                                    </cells>
                                    <cells>
                                    	<Button text="{i18n>serviceButton}" width="auto" press="onDialogPress" class="sapUiSmallMarginBottom" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>
                </Panel>
                <Panel id="productDetailsPanel" headerText="{i18n>addInfoHeader}" class="sapUiResponsiveMargin" width="auto">
                    <l:VerticalLayout>
                        <Label text="{i18n>Created}:" />
                        <Text id="dateCreate" />
                        <Label text="{i18n>Updated}:" />
                        <Text id="dateUpdate" />
                    </l:VerticalLayout>
                </Panel>
                <footer>
                    <Toolbar>
                        <ToolbarSpacer />
                        <Button text="Create" icon="sap-icon://add" press=".createMicrowave" enabled="{configModel>/bool}" />
                        <Button text="Edit" icon="sap-icon://edit" press=".updateMicrowave" enabled="{configModel>/bool}" />
                        <Button text="Delete" icon="sap-icon://delete" press=".deleteMicrowave" />
                    </Toolbar>
                </footer>
            </Page>
        </App>
    </Shell>
</mvc:View>