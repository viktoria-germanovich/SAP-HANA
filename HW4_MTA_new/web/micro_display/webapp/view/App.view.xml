<mvc:View controllerName="micro_display.controller.App" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<App id="home">
			<Page title="{i18n>homePageTitle}">
            <Panel class="sapUiResponsiveMargin" width="auto">
					<content>
						<Label text="ID" class="sapUiSmallMargin" />
      					<Input id="input_id" width="200px" />	
                        <Button text="Update" press=".updateMicrowave"/>
                        <Label text="Brand" class="sapUiSmallMargin" />
      					<Input id="input_brand" width="200px" />	
                        <Button text="Create" press=".createMicrowave"/>
                    </content>
				</Panel>
				<Panel class="sapUiResponsiveMargin" width="auto">
					<content>
						 <Table id="peopleTable" 
                            growing="true" 
                            growingThreshold="10" 
                            items="{
					path: 'microwaves>/Microwaves'
				}">
                                <columns>
                                    <Column id="idColumn">
                                        <Text text="{i18n>idNameLabelText}" />
                                    </Column>
                                    <Column id="nameColumn">
                                        <Text text="{i18n>brandLabelText}" />
                                    </Column>
                                    <Column id="dateOfCreateColumn">
                                        <Text text="{i18n>dateOfCreateLabelText}" />
                                    </Column>
                                    <Column id="dateOfUpdateColumn">
                                        <Text text="{i18n>dateOfUpdateLabelText}" />
                                    </Column>
                               </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{microwaves>microid}" />
                                        </cells>
                                        <cells>
                                            <Text text="{microwaves>brand}" />
                                        </cells>
                                         <cells>
                                            <Text text="{i18n>testText}" />
                                        </cells>
                                        <cells>
                                            <Text text="{i18n>testText}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
					</content>
				</Panel>
			</Page>
		</App>
	</Shell>
</mvc:View>